    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "sass": "^1.30.0",
    "tailwindcss": "^1.8.9",
    "typescript": "^4.1.3"
  }
